{
    "name": "sld-bff",
    "version": "0.0.1",
    "description": "Crypto Backend for Frontend",
    "main": "src/index.ts",
    "scripts": {
        "build": "rimraf dist && tsc",
        "build:watch": "rimraf dist && tsc -w",
        "compose:start": "docker-compose build main && docker-compose rm -fs main && docker-compose up -d",
        "compose:stop": "docker-compose down",
        "compose:daemon": "ts-node-dev --inspect=0.0.0.0 src/index.ts",
        "compose:reload": "docker-compose restart main",
        "dev": "export HTTP_PORT=8080; ts-node src/index.ts",
        "dev:daemon": "export HTTP_PORT=8080; ts-node-dev src/index.ts",
        "dev:inspect": "export HTTP_PORT=8080; node -r ts-node/register --inspect=0.0.0.0 src/index.ts",
        "dev:pretty": "yarn dev | pino-pretty",
        "eslint": "eslint ./ --cache --fix",
        "lint-staged": "lint-staged",
        "start": "node dist/index.js",
        "test-changed": "export HTTP_PORT=8080; jest --maxWorkers=50% -o -c jest.config.ts --colors --no-watchman",
        "test-prepush": "export HTTP_PORT=8080; jest --maxWorkers=50% -c jest.config.ts --colors --no-watchman",
        "test:html": "export HTTP_PORT=8080; jest --collectCoverage --maxWorkers=4 -c jest.config.ts --colors --no-watchman --verbose --coverage --coverageDirectory './coverage'",
        "test:quick": "export HTTP_PORT=8080; jest --maxWorkers=4 -c jest.config.ts --no-watchman -u",
        "prepare": "husky install"
    },
    "dependencies": {
        "@hapi/boom": "^9.1.4",
        "@sinclair/typebox": "^0.23.4",
        "axios": "^0.26.0",
        "fastify": "^3.29.0",
        "fastify-autoload": "^3.11.0",
        "fastify-autoroutes": "^2.1.3",
        "fastify-cors": "^6.0.2",
        "fastify-helmet": "^7.0.1",
        "fastify-oas": "^3.0.8",
        "fastify-plugin": "^3.0.1",
        "fastify-sensible": "^3.1.2",
        "geolocation-utils": "^1.2.5",
        "http-status-codes": "^2.2.0",
        "is-docker": "^2.2.1",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "node-appwrite": "^5.0.0",
        "pino-pretty": "^7.5.1",
        "typeparse": "^0.3.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-conventional": "^16.2.1",
        "@types/jest": "^27.4.0",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/lodash": "^4.14.179",
        "@types/node": "^17.0.18",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "commitlint-config-jira": "^1.5.2",
        "commitlint-plugin-jira-rules": "^1.5.1",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.3.5",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-promise": "^5.1.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "lint-staged": "^12.3.7",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.5.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.5"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --cache --fix"
        ]
    }
}
